@using Kachuwa.Identity.ViewModels
@model Kachuwa.Identity.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Resend Email Verification Link";

}

<!-- Inner Page Breadcrumb -->
<section class="inner_page_breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-xl-6 offset-xl-3 text-center">
                <div class="breadcrumb_content">
                    <h4 class="breadcrumb_title">@ViewData["Title"]</h4>
                    @*<ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Account</a></li>
                            <li class="breadcrumb-item active" aria-current="page">ForgotPassword</li>
                        </ol>*@
                </div>
            </div>
        </div>
    </div>
</section>


<section class="container">
    <h4>Enter your email.</h4>
    <p>Please Enter Email when you've registered .Click Send. you'll recieve Email Verification link in your email.</p>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="ReSendEmailVerificationLink" method="post">
                @*<div asp-validation-summary="All" class="text-danger"></div>*@
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn btn-primary">Send</button>
            </form>
        </div>
    </div>
</section>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
